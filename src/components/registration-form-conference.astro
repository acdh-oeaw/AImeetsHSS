---
import TextInputField from "@/components/form/text-input-field.astro";

import { withBasePath } from "../lib/with-base-path";
---

<form
	action={withBasePath("/api/registration")}
	class="grid gap-y-6"
	data-astro-reload
	method="post"
>
	<h3>Personal details:</h3>
	<TextInputField label="First Name" name="first-name" required={true} />

	<TextInputField label="Last Name" name="last-name" required={true} />

	<TextInputField label="Email" name="email" required={true} type="email" />

	<TextInputField label="Affiliation (University/Institute)" name="affiliation" required={false} />

	<input type="hidden" name="type" value="conference" />

	<h3>Registering for days:</h3>
	<label class="text-sm">
		<input class="mr-0.5" name="monday" required={false} type="checkbox" />
		<span> Monday, 23 June 2025 </span>
	</label>
	<label class="text-sm">
		<input class="mr-0.5" name="tuesday" required={false} type="checkbox" />
		<span> Tuesday, 24 June 2025 </span>
	</label>
	<label class="text-sm">
		<input class="mr-0.5" name="wednesday" required={false} type="checkbox" />
		<span> Wednesday, 25 June 2025 </span>
	</label>
	<label class="text-sm">
		<input class="mr-0.5" name="discussion" required={false} type="checkbox" />
		<span> Public Discussion on Wednesday, 25 June 2025 </span>
	</label>

	<h3>GDPR Consent:</h3>
	<label class="text-sm">
		<input class="mr-0.5" name="data-consent" required={true} type="checkbox" />
		<span>
			I expressly acknowledge the storage of my registration details for the duration of the
			conference in line with the <a href="/en/privacy-declaration/">privacy declaration.</a>
		</span>
	</label>

	<button
		class="rounded-md bg-[#212529] px-4 py-2 font-semibold text-white transition hover:bg-neutral-700"
		type="submit"
	>
		Register
	</button>
</form>
