---
import { defaultLocale } from "@/config/i18n.config";

import { withBasePath } from "../lib/with-base-path";

export const prerender = false;

/**
 * The typescript warning is about:
 *
 * @see https://github.com/withastro/language-tools/issues/476
 */
const locale = Astro.preferredLocale ?? defaultLocale;

return Astro.redirect(withBasePath(`/${locale}/`), 307);
---
